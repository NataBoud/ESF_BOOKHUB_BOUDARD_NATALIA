@using BookHub.Shared.DTOs

@code {
    [Parameter]
    public BookDto? Book { get; set; }
}

<div class="card h-100">
    <div class="card-img-top bg-light d-flex align-items-center justify-content-center"
         style="height: 200px;">
        @if (!string.IsNullOrEmpty(Book?.CoverImageUrl))
        {
            <img src="@Book.CoverImageUrl" alt="@Book.Title" class="img-fluid" style="max-height: 100%;" />
        }
        else
        {
            <i class="bi bi-book display-1 text-secondary"></i>
        }
    </div>

    <div class="card-body">
        <h5 class="card-title">@Book?.Title</h5>
        <p class="card-text text-muted">@Book?.Author</p>
        <p class="card-text"><small class="text-muted">@Book?.Category - @Book?.PublicationYear</small></p>
        <span class="badge @(Book?.IsAvailable == true ? "bg-success" : "bg-danger")">
            @(Book?.IsAvailable == true ? $"{Book?.AvailableCopies} disponible(s)" : "Indisponible")
        </span>
    </div>

    <div class="card-footer">
        <a href="/books/@Book?.Id" class="btn btn-primary btn-sm w-100">
            <i class="bi bi-eye"></i> Voir d√©tails
        </a>
    </div>
</div>

